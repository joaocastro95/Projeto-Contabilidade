<main id="mainLancamento">
    <div id="localDebitos">
        <section class="sectionLancamento">
            <article class="articleLancamentoCampos">
                <div class="areaLancamento1">
                    <form id="formLancamento1" class="forms" action="/registros/add" method="POST">
                        <div class="LancamentoCampos">
                            <div class="input-group">
                                <label for="conta">Nome da conta</label>
                                <input type="text" id="conta" name="conta" class="inputLogin" required>
                            </div>
                            <div class="input-group">
                                <label for="debito">Débito</label>
                                <input type="number" id="debito1" name="debito" class="inputLogin">
                            </div>
                            <div class="input-group">
                                <label for="historico">Histórico</label>
                                <input type="text" id="historico" name="historico" class="inputLogin" required>
                            </div>
                            <div class="input-group">
                                <input type="hidden" id="id_empresa" name="id_empresa" value="{{empresa.id}}">
                            </div>
                        </div>
                    </form>
                </div>
            </article>
        </section>
    </div>

    <div id="localCreditos">
        <section class="sectionLancamento2">
            <article class="articleLancamentoCampos2">
                <div class="areaLancamento2">
                    <form id="form2Lancamento1" class="forms" action="/registros/add" method="POST">
                        <div class="LancamentoCampos">
                            <div class="input-group">
                                <label for="conta">Nome da conta</label>
                                <input type="text" id="conta" name="conta" class="inputLogin" required>
                            </div>
                            <div class="input-group">
                                <label for="credito">Crédito</label>
                                <input type="number" id="credito1" name="credito" class="inputLogin">
                            </div>
                            <div class="input-group">
                                <label for="historico">Histórico</label>
                                <input type="text" id="historico" name="historico" class="inputLogin" required>
                            </div>
                            <div class="input-group">
                                <input type="hidden" id="id_empresa" name="id_empresa" value="{{empresa.id}}">
                            </div>
                        </div>
                    </form>
                </div>
            </article>
        </section>
    </div>
</main>

<div class="areaBtn">
    <button class="adicionaDeb" id="adicionaDebito">Adicionar Débito</button>
    <button class="btnLancamentoEnvio" id="enviaForms">Clique para enviar</button>
    <button class="adicionaCre" id="adicionaCredito">Adicionar Crédito</button>
</div>


<div id="customAlert" class="alert" style="display:none;">
    <div class="alert-header">
        <h2 id="tituloAlert"></h2>
    </div>
    <div class="alert-content">
        <p id="corpoAlert"></p>
        <button id="closeAlert">Fechar</button>
    </div>
</div>

<script type="module" src="/ESCRIPTS/lancamento.js"></script>