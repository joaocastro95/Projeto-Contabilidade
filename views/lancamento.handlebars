<main id="mainLancamento">

    <section class="sectionLancamento">
        <article class="articleLancamentoCampos">
            <div class="areaLancamento">
                <form id="formLancamento1" class="forms" action="/registros/add" method="POST">
                    <div class="LancamentoCampos">
                        <div class="input-group">
                            <label for="conta">Nome da conta</label>
                            <input type="text" id="conta" name="conta" class="inputLogin" required>
                        </div>
                        <div class="input-group">
                            <label for="debito">Debito</label>
                            <input type="number" id="debito" name="debito" class="inputLogin" >
                        </div>
                        <div class="input-group">
                            <label for="historico">Historico</label>
                            <input type="text" id="historico" name="historico" class="inputLogin" required>
                        </div>
                        <div class="input-group">
                            <input type="hidden" id="id_empresa" name="id_empresa" value={{empresa.id}}>
                        </div>
                    </div>
                    <button class="btnLancamento" type="submit">Cadastrar Lançamento</button>
                </form>
            </div>
        </article>
    </section>

    <section class="sectionLancamento2">
        <article class="articleLancamentoCampos">
            <div class="areaLancamento2">
                <form id="formLancamento2" class="forms" action="/registros/add" method="POST">
                    <div class="LancamentoCampos">
                        <div class="input-group">
                            <label for="conta">Nome da conta</label>
                            <input type="text" id="conta" name="conta" class="inputLogin" required>
                        </div>
                        <div class="input-group">
                            <label for="credito">Credito</label>
                            <input type="number" id="credito" name="credito" class="inputLogin">
                        </div>
                        <div class="input-group">
                            <label for="historico">Historico</label>
                            <input type="text" id="historico" name="historico" class="inputLogin" required>
                        </div>
                        <div class="input-group">
                            <input type="hidden" id="id_empresa" name="id_empresa" value={{empresa.id}}>
                        </div>
                    </div>
                    <button class="btnLancamento2" type="submit">Cadastrar Lançamento</button>
                </form>
            </div>
        </article>
    </section>

    <div id="result"></div>
</main>

<div id="customAlert" class="alert">
    <div class="alert-header">
        <h2 id="tituloAlert"></h2>
    </div>
    <div class="alert-content">
        <p id="corpoAlert"></p>
        <button id="closeAlert">Fechar</button>
    </div>
</div>

