<main id="mainBalancete">
    {{#if registrosComTotal }}
    {{#each registrosComTotal}}
    <section id="sectionBalancete">
        <div class="areaBalancete">
            <p class="itemBalancete">Conta: {{conta}}</p>
            <p class="itemBalancete">Débito: {{total_debito}}</p>
            <p class="itemBalancete">Crédito: {{total_credito}}</p>
            {{#if isPositive}}
            <p class="itemBalancete">Saldo devedor: {{abs total}}</p>
            {{/if}}
            {{#if isNegative}}
            <p class="itemBalancete">Saldo credor: {{abs total}}</p>
            {{/if}}
            {{#if isZero}}
            <p class="itemBalancete">Saldo: 0</p>
            {{/if}}
        </div>
    </section>
    {{/each}}
    {{else}}
    <section id="sectionBalancete">
        <article style="align-items: center;" class="articleDiario">
            <div id="diarioSemLancamento">
                <h1>Não possui lançamentos ainda!</h1>
                <h2>Gostaria de fazer um? </h2>
                <a class="homeButton" href="/lancamento">Ir para lançamento</a>
            </div>
        </article>
    </section>
    {{/if}}
</main>

<div id="customAlert" class="alert">
    <div class="alert-header">
        <h2 id="tituloAlert"></h2>
    </div>
    <div class="alert-content">
        <p id="corpoAlert"></p>
        <button id="closeAlert">Fechar</button>
    </div>
</div>

<script type="module" src="/ESCRIPTS/balancete.js"></script>


</script>